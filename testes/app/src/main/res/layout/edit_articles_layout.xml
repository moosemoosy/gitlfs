<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/list_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile2"
                android:scaleType="centerCrop"
                android:layout_marginLeft="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/post_personality_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personality name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#303030"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/post_article_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Article Title Here"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#303030"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"

                    android:padding="2dp"
                    >

                    <TextView
                        android:id="@+id/post_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-Author_name"
                        android:textSize="14sp"
                        android:maxWidth="200dp"
                        />

                    <TextView
                        android:id="@+id/post_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date time"
                        android:layout_marginRight="10dp"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="status: "/>

                </LinearLayout>


            </LinearLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/edit_pencil_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/article_edit_icon"
        android:layout_gravity="right"/>
    <ImageButton
        android:id="@+id/approve_button"
        android:layout_below="@+id/edit_pencil_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/approve_btn"
        android:layout_gravity="right"/>
    <ImageButton
        android:id="@+id/reject_button"
        android:layout_below="@+id/approve_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/reject_btn"
        android:layout_gravity="right"/>
</RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_height="0.5dp"
            android:background="#c0c0c0"/>
    </LinearLayout>

</RelativeLayout>